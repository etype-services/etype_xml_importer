/**
 * @param $node
 * @param $context
 * Function attached to custom action to store selected node ids
 */
function etype_xml_importer_add_nodes(&$node, $context) {
  $query = new EntityFieldQuery;
  $result = $query
    ->entityCondition('entity_type', 'taxonomy_term')
    ->propertyCondition('name', ['Obituaries', 'Sports', 'Opinion'], "IN")
    ->execute();
  if (isset ($result['taxonomy_term'])) {
    $arr = $result['taxonomy_term'];
    reset($arr);
    $tid = key($arr);
    echo $tid;
    $type = variable_get('etype_xml_node_type');
    $fields = field_info_instances("node", $type);
    $node = node_load($node->nid);
    if (array_key_exists('field_section', $fields)) {
      $node->field_section['und'][0] = array('tid' => $tid);
    } else {
      $node->field_category['und'][0] = array('tid' => $tid);
    }
    node_save($node);
  }
}

